# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Javascript routing
GET     /assets/javascripts/routes  controllers.Application.javascriptRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /chart                      controllers.Application.chart()
GET     /ajaxChart                  controllers.Application.ajaxChart(qs: String)

# Metadata lookup
GET     /metadata_namespaces             controllers.Application.metadataQueryNameSpaces()
GET     /metadata_namespace_instances    controllers.Application.metadataQueryNameSpaceInstances()
GET     /metadata_namespace_keys         controllers.Application.metadataQueryNameSpaceKeys()
GET     /metadata_namespace_key_values   controllers.Application.metadataQueryNameSpaceKeyValues()

# receive file upload
POST    /upload                       controllers.Application.upload()